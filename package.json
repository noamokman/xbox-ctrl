{
  "name": "xbox-ctrl",
  "version": "1.2.3",
  "description": "Node api for the xbox controller",
  "main": "dist/index.js",
  "bin": {
    "xbox-ctrl": "bin/xbox-ctrl",
    "xctrl": "bin/xbox-ctrl"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint lib --fix",
    "install": "prebuild-install || node-gyp rebuild",
    "upload": "prebuild --all -u",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e",
    "babel": "babel lib -d dist -s",
    "build": "rimraf lib && npm run babel",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noamokman/xbox-ctrl.git"
  },
  "keywords": [
    "xbox",
    "native",
    "xinput",
    "windows",
    "controller"
  ],
  "author": {
    "name": "Noam Okman",
    "email": "noamokman@gmail.com",
    "url": "https://github.com/noamokman"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/noamokman/xbox-ctrl/issues"
  },
  "homepage": "https://github.com/noamokman/xbox-ctrl#readme",
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "bindings": "^1.3.0",
    "caporal": "^0.9.0",
    "inquirer": "^4.0.1",
    "nan": "^2.8.0",
    "p-try": "^1.0.0",
    "prebuild-install": "^2.4.1",
    "update-notifier": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-angular": "^5.1.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.13.1",
    "eslint-config-noamokman": "^7.2.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-lodash": "^2.5.0",
    "eslint-plugin-unicorn": "^3.0.1",
    "husky": "^0.14.3",
    "prebuild": "^7.0.0",
    "lint-staged": "^6.0.0",
    "rimraf": "^2.6.1"
  },
  "module": "lib/index.js",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
